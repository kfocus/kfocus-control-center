#!/bin/bash

# git fetch -a --prune || exit 1;
# git checkout brand   || exit 1;
# git pull             || exit 1;
#
# git checkout release || exit 1;
# git pull             || exit 1;

_echoLogHash () {
  declare _branch_str;
  _branch_str="${1:-}";
  if [ -z "${_branch_str}" ]; then exit 1; fi
  git log "${_branch_str}" |head -n1 |awk '{print $2}' |cut -c1-8;
}
_echoExitFn () { 1>&2 echo -e "Abort: $*"; exit 1; }
_echoFn () { 1>&2 echo -e "$*"; }

_mainFn () {
  declare _source_str _date_str _local_source_hash _local_release_hash \
    _origin_source_hash _origin_release_hash _patch_file;

  _source_str="${1:-}";
  if [ -z "${_source_str}" ]; then
    _echoFn "Defaulting to current working branch as source";
    _source_str="$(git branch --show-current)" || exit 1;
  fi

  git fetch -a --prune --all || exit 1;
  git checkout release          && git pull || exit 1;
  git checkout "${_source_str}" && git pull || exit 1;

  _date_str="$( date +%Y-%m-%d )";
  _local_source_hash="$(   _echoLogHash "${_source_str}"         )";
  _local_release_hash="$(  _echoLogHash 'release'                )";
  _origin_source_hash="$(   _echoLogHash "origin/${_source_str}" )";
  _upstr_release_hash="$(  _echoLogHash 'upstream/release'       )";

  if [ "${_local_source_hash}" != "${_origin_source_hash}" ]; then
    _echoExitFn "Local branch |${_source_str}| does not match origin";
  fi

  if [ "${_local_release_hash}" != "${_upstr_release_hash}" ]; then
    _echoExitFn 'Local branch |release| does not match upstream';
  fi

  _patch_file="${_source_str:0:8}_${_local_source_hash}_release-${_local_release_hash}";
  _patch_file+="_${_date_str}.patch";

  if [ -f "${_patch_file}" ]; then
    _echoExitFn "Patch file |${_patch_file}| already exists";
  fi

  git diff --binary release.."${_source_str}" > "${_patch_file}" \
    || _echoExitFn "Could not create patch file |${_patch_file}|";
  _echoFn "Patch file |${_patch_file}| created";
}

_mainFn "$@";
